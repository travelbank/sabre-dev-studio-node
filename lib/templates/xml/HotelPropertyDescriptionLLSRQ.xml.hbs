
<!--"ReturnHostCommand" is used to specify whether or not to return the native host command in the response message.-->
<HotelPropertyDescriptionRQ ReturnHostCommand="false" Version="2.1.0" xmlns="http://webservices.sabre.com/sabreXML/2011/10" xmlns:xs="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <AvailRequestSegment>
    <!--"Count" is used to specify the number of room occupants - up to 9.-->
    <GuestCounts Count="1"/>
    <HotelSearchCriteria>
      <Criterion>
        <!--"HotelCode" is used to specify the particular hotel property number.-->
        <!--"UnitOfMeasure" is used to override the point of sale location's default search measurement. MI, or KM-->
        <HotelRef HotelCode="1234567" />
      </Criterion>
    </HotelSearchCriteria>
    <!--"AdditionalRateInfo" is used to allow a client application to request additional room rate-related information.  In order to utilize this element the client application must have first performed a successful HotelPropertyDescriptionLLSRQ.  @AdditionalRateInfo cannot combine with any other qualifiers.-->
    <!--AdditionalRateInfo equivalent Sabre host command: HOD*M-->
    <!--RateList equivalent Sabre host command: HOD1234567/21DEC-24DEC2/*R-->
    <!--NoRateList equivalent Sabre host command: HOD1234567/21DEC-24DEC2/-R-->
    <!-- <RatePlanCandidates AdditionalRateInfo="true" NoRateList="false" RateList="true"> -->
      <!--Optional-->
      <!--Repeat Factor=0-99-->
      <!--"ContractNegotiatedRateCode" is used to specify a contract or negotiated rate code.-->
      <!--Equivalent Sabre host command: HOD1234567‡SAB‡TVY/21DEC-24DEC2-->
      <!-- <ContractNegotiatedRateCode>SAB</ContractNegotiatedRateCode>
      <ContractNegotiatedRateCode>TVY</ContractNegotiatedRateCode> -->
      <!--Optional-->
      <!--Repeat Factor=0-3-->
      <!--"RatePlanCode" is used to specify a Rate Plan Code (rate type).-->
      <!--Acceptable values are: V, C, D, I, F, GOV, M, P, S, TVL, W, R, N, X, or ALL.-->
      <!--Equivalent Sabre host command: HOD1234567/21DEC-24DEC2/RC-GOV,N-->
      <!-- <RatePlanCode>GOV</RatePlanCode>
      <RatePlanCode>N</RatePlanCode> -->
      <!--Optional-->
      <!--Repeat Factor=0-->
      <!--"RateRange" is used to query the specified hotel for rates meeting specified criteria.-->
      <!--CurrencyCode equivalent Sabre host command: HOD1234567/21DEC-24DEC1/C-USD-->
      <!--Max equivalent Sabre host command: HOD1234567/21DEC-24DEC1/R-150-->
      <!--Min equivalent Sabre host command: HOD1234567/21DEC-24DEC1/R‡150-->
      <!-- <RateRange CurrencyCode="USD" Max="150.00" Min="50.00"/> -->
      <RateRange CurrencyCode="USD" />
    </RatePlanCandidates>
    <!--"End" is used to return the last date of the specified hotel stay.-->
    <!--"End" follows this format: MM-DD-->
    <!--"Start" is used to return the first date of the specified hotel stay.-->
    <!--"Start" follows this format: MM-DD-->
    <TimeSpan End="10-30" Start="10-15" /> <!-- @todo Make this variable -->
  </AvailRequestSegment>
</HotelPropertyDescriptionRQ>
